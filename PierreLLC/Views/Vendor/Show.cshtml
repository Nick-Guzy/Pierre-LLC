@{
  Layout = "_Layout";
}

@using PierreLLC.Models;

<h3>Here are all the orders for this Vendor:</h3>

<ol>
@foreach (Order order in @Model["order"])
{
  <li><a href='/vendors/@Model["vendors"].Id/order/@order.Id'>@order.Description</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendors"].Id/order/new'>Add a New Order</a></p>
<p><a href='/vendors'>Return to Vendor List</a></p>
<p><a href='/'>Return to Main Page</a></p>